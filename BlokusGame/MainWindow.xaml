<Window x:Name="PiecesBox" x:Class="BlokusGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlokusGame"
        xmlns:s="clr-namespace:BlokusGame.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="360" Width="525"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0.5"/>
            <Setter Property="FontSize" Value="70"/>
        </Style>
    </Window.Resources>

    <Grid x:Name="Container" Margin="0,0,0,10" RenderTransformOrigin="0.503,0.564">
        <Grid.RowDefinitions>
            <RowDefinition Height="200*"/>
            <RowDefinition Height="200*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="Board" Grid.Row="0" Margin="10">
        </Grid>
        <Grid x:Name="Inventory" Grid.Row="1" Margin="0,6,0,1">

        </Grid>
    </Grid>
</Window>
